#!/bin/bash

tar -cf - -C ~/Tangle \
    classes \
    functions \
    interfaces \
    containers/test | \
docker build -t test -f containers/test/Dockerfile -

docker run \
    --init \
    --net foo \
    --name test \
    --rm \
    -v ~/Tangle/pipe:/app/containers/test/host \
    -v ~/Tangle/containers/test/pipe:/app/containers/test/pipe \
    -v ~/Tangle/containers/chain/pipes:/app/containers/test/pipes \
    -it \
    test